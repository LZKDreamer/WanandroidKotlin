<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/item_background"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/article_author_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/article_author"
                    android:textColor="@color/item_text_tag"
                    android:text="扔物线"/>
                <TextView
                    android:id="@+id/article_top_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_shape"
                    android:layout_marginStart="8dp"
                    android:text="置顶"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="@dimen/article_tag"
                    android:gravity="center"
                    android:textColor="@color/item_tag_shape"/>
                <TextView
                    android:id="@+id/article_new_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_shape"
                    android:layout_marginStart="8dp"
                    android:text="新"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="@dimen/article_tag"
                    android:gravity="center"
                    android:textColor="@color/item_tag_shape"/>
                <TextView
                    android:id="@+id/article_tag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_shape"
                    android:layout_marginStart="8dp"
                    android:text="本站发布"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="@dimen/article_tag"
                    android:textColor="@color/item_tag_shape"/>
            </LinearLayout>
            <TextView
                android:id="@+id/article_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/article_time"
                android:textColor="@color/item_text_tag"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="1分钟前"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/article_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/article_title"
            android:textStyle="bold"
            android:textColor="@color/item_text_primary"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="这是一个根据MVPArms框架开发玩Android的一个APP，仅供个人使用，禁止商用,这是一个根据MVPArms框架开发玩Android的一个APP，仅供个人使用，禁止商用"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/article_category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/article_category"
                android:textColor="@color/item_text_tag"
                android:text="分类·项目"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/article_collect_iv"
                android:layout_width="@dimen/collect_view"
                android:layout_height="@dimen/collect_view"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_uncollect"
                />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>